	<mongo:mongo host="169.254.230.152" port="27017">
        <mongo:options connections-per-host="60"
            threads-allowed-to-block-for-connection-multiplier="150"
            connect-timeout="1000" max-wait-time="1500" auto-connect-retry="true" />
    </mongo:mongo>
